{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "SQLite": "Data Source=fluxindex.db",
    "PostgreSQL": "Host=localhost;Database=fluxindex;Username=postgres;Password=postgres"
  },
  "OpenAI": {
    "ApiKey": "",
    "Model": "gpt-5-nano",
    "EmbeddingModel": "text-embedding-3-small",
    "MaxTokens": 4096,
    "Temperature": 0.7
  },
  "FluxIndex": {
    "EnableMetadataEnrichment": true,
    "EnableAdvancedReranking": true,
    "DefaultTopK": 10,
    "MinScore": 0.5,
    "ChunkingOptions": {
      "DefaultStrategy": "Auto",
      "MaxChunkSize": 512,
      "OverlapSize": 64,
      "EnableQualityScoring": true
    },
    "CacheOptions": {
      "EnableCaching": true,
      "CacheDurationMinutes": 60,
      "MaxCacheSize": 1000
    },
    "RerankingOptions": {
      "DefaultStrategy": "Adaptive",
      "QualityBoostFactor": 0.2,
      "RecencyBoostFactor": 0.1,
      "EnableCrossEncoderReranking": true
    }
  },
  "FileFlux": {
    "SupportedFormats": [ ".pdf", ".docx", ".txt", ".md", ".html", ".csv", ".xlsx" ],
    "MaxFileSizeMB": 100,
    "EnableOCR": false,
    "EnableMultimodal": true,
    "ChunkingStrategies": {
      "Smart": {
        "MinChunkSize": 100,
        "MaxChunkSize": 512,
        "TargetChunkSize": 300
      },
      "Intelligent": {
        "UseAI": true,
        "PreserveContext": true,
        "MaxContextWindow": 1024
      },
      "Semantic": {
        "UseSentenceBoundaries": true,
        "PreserveParagraphs": true,
        "MaxSentencesPerChunk": 10
      }
    }
  },
  "TestConfiguration": {
    "TestDataPath": "D:\\data\\FileFlux\\test",
    "BenchmarkIterations": 100,
    "ParallelDegree": 4,
    "EnableDetailedLogging": false,
    "TestQueries": [
      "How to optimize battery life?",
      "What are the best practices for security?",
      "Explain the authentication process",
      "How to improve application performance?",
      "What are the system requirements?"
    ],
    "QualityMetrics": {
      "CalculateRecall": true,
      "CalculatePrecision": true,
      "CalculateMRR": true,
      "CalculateNDCG": true,
      "CalculateF1Score": true
    }
  }
}